        android:layout_marginTop="15dp"
        android:text="@string/inclusao"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/info_inclusao"
        android:layout_width="wrap_content"
